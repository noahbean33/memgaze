#!/bin/bash
set -x
opt_outDir=''
opt_app=''
perf_path='/home/kili337/src/linux-5.5.9/tools/perf/perf'
scriptCmd="./memgaze-xtrace"


#****************************************************************************
# Parse arguments
#****************************************************************************

die()
{
    cat <<EOF 1>&2
${scriptCmd}: $*
Use '${scriptCmd} -h' for usage.
EOF
    exit 1
}

usage()
{
    cat <<EOF
Usage: ${scriptCmd} [options]

Options:
  -h / --help   => print help
  -o / --output => name of output directory
  -i / --app    => binary path
EOF
    exit 0
}

#-----------------------------------------------------------
# optional arguments
#-----------------------------------------------------------
while [[ $# -gt 0 ]] ; do

    arg="$1"
    shift # past argument

    case "${arg}" in
        -h | --help )
            usage
            ;;

        -o | --output )
            opt_outDir="$1"
            shift # past value
            ;;
        
	-i | --app )
            opt_app="$1"
            shift # past value
            ;;

	-- )
            break
            ;;

        * ) # beginning of <application> command line
            set -- "$arg" "$@"
            break
            ;;
    esac
done

#-----------------------------------------------------------
# required args
#-----------------------------------------------------------
#if [[ -z $1 ]] ; then
#    die "no command to monitor"
#fi



./libexec/extract_data.sh ${opt_app}
./libexec/removeErros.sh ${opt_app}.trace
mv ${opt_app}.trace.clean ${opt_app}.trace
./libexec/add_base_IP.py ${opt_app}.trace ${opt_app}_PTW ${opt_app}.binanlys ${opt_app}.trace.final
mv ${opt_app}.trace.final ${opt_app}.trace
mv ${opt_app}.trace.final_callGraph ${opt_app}.callpath
