include Makefile-defs.mk

#****************************************************************************
# Recursion
#****************************************************************************

MK_SUBDIRS = \
	xlib \
	bin-anlys  

#****************************************************************************
# Template Rules
#****************************************************************************

include Makefile-template.mk


#****************************************************************************
# Local Rules
#****************************************************************************

info.local :

check.local :

all info:
	@for dir in $(MK_SUBDIRS); \
        do \
           echo "Running \"make $@\" in $$dir"; \
           (cd $$dir && $(MAKE) $@ ); \
        done
